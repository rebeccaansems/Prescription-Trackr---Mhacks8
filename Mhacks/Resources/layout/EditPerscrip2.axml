<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:id="@+id/linearLayout1">
        <TextView
            android:text="Medication Name: "
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:id="@+id/text_MedName" />
        <EditText
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:id="@+id/medName" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/linearLayout2">
        <TextView
            android:text="Medication Amount: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:id="@+id/text_MedAmount" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:id="@+id/medAmount" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/linearLayout4">
        <TextView
            android:text="How Often: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:id="@+id/text_howOften" />
        <Spinner
            android:text="N/A"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:id="@+id/howOften" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/linearLayout5">
        <TextView
            android:text="What Time: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:id="@+id/text_whatTime" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:id="@+id/whatTime" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/linearLayout6">
        <TextView
            android:text="Number Doses: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:inputType="number"
            android:id="@+id/text_NumberDoses" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:id="@+id/numberDoses" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/linearLayout7">
        <TextView
            android:text="Doctors Name: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="180dp"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:id="@+id/text_DoctorsName" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:id="@+id/doctorsName" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/linearLayout7">
        <TextView
            android:text="Prescription Code: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="180dp"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:id="@+id/text_PrescripCode" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:id="@+id/prescriptionCode" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/linearLayout8">
        <TextView
            android:text="Medication Purpose: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:id="@+id/text_MedPurpose" />
        <EditText
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/medPurpose" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:weightSum="2">
        <Button
            android:id="@+id/pictureMed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Take Picture Medication"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/picturePrescrip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Take Picture Prescription"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_weight="1" />
    </LinearLayout>
    <FrameLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayout1">
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:layout_gravity="bottom"
            android:weightSum="2">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Back"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_weight="1"
                android:id="@+id/back" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Save"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_weight="1"
                android:id="@+id/save" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>